@page
@model RazorpageBulky.Pages.Categories.DeleteModel


<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index"  class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>


    </div>

</form>


